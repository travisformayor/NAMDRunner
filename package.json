{
  "name": "namdrunner",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:check": "npm run test:run && npm run check && vite build",
    "build:ci": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "test": "vitest --config vite.config.test.ts",
    "test:vitest-ui": "vitest --ui --config vite.config.test.ts",
    "test:run": "vitest run --config vite.config.test.ts",
    "test:ui": "DISPLAY=:99 node tests/ui/debug-toolkit.js",
    "test:ui:headless": "DISPLAY=:99 node tests/ui/headless-visual-check.js",
    "test:e2e": "DISPLAY=:99 npx wdio run tests/e2e/wdio.conf.js",
    "test:coverage": "./scripts/test-coverage.sh",
    "tauri": "tauri"
  },
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "geckodriver": "^6.0.1",
    "selenium-webdriver": "^4.35.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/svelte": "^5.2.8",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/ui": "^3.2.4",
    "@wdio/cli": "^9.19.2",
    "@wdio/local-runner": "^9.19.0",
    "@wdio/mocha-framework": "^9.19.0",
    "@wdio/spec-reporter": "^9.19.0",
    "eslint": "^9.34.0",
    "eslint-plugin-svelte": "^3.12.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^3.2.4"
  }
}
